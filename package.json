{
  "name": "parcel-starter",
  "version": "1.5.0",
  "description": "Simple Parcel bundler Starter",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "start": "npm run dev",
    "dev": "parcel src/index.html",
    "build": "npm run clean && parcel build src/index.html",
    "eslint:check": "eslint --format friendly --ignore-path .gitignore --ext .js src/",
    "eslint:fix": "eslint --fix --format friendly --ignore-path .gitignore --ext .js src/",
    "stylelint:check": "stylelint src/styles/**/*.scss",
    "stylelint:fix": "stylelint src/styles/**/*.scss --fix",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/piotrlewandowski/parcel-starter.git"
  },
  "keywords": [],
  "author": "Piotr Lewandowski <contact@piotrlewandowski.info> (piotrlewandowski.info)",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/piotrlewandowski/parcel-starter/issues"
  },
  "homepage": "https://github.com/piotrlewandowski/parcel-starter#readme",
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/eslint-parser": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@commitlint/cli": "^13.2.0",
    "@commitlint/config-conventional": "^13.2.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-formatter-friendly": "^7.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.2.0",
    "parcel-bundler": "^1.12.5",
    "parcel-plugin-notifier": "^1.0.0",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "sass": "^1.42.1",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0"
  }
}
